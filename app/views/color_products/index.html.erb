<p id="notice"><%= notice %></p>

<h1>Color Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_products.each do |color_product| %>
      <tr>
        <td><%= color_product.product.name %></td>
        <td><%= color_product.color.name %></td>
        <td><%= link_to 'Show', color_product %></td>
        <td><%= link_to 'Edit', edit_color_product_path(color_product) %></td>
        <td><%= link_to 'Destroy', color_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Color Product', new_color_product_path %>
