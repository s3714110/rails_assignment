<% provide(:title, "Filter") %>


<div class="filter-opt-div">

<%= form_tag url_for(filter_path), :method => 'post'  do %>
<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Color</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

      <tr>


          <td> <% Tag.all.each do |tag| %>
            <p class="form-p"><%= check_box_tag "tag", tag.id ,false, class:"form-check-input" %> <label class="form-check-label"><%= tag.name %></label></p>
          <% end %>
          </td>

          <td>
            <% Color.all.each do |color| %>
            <p class="form-p"><%= check_box_tag "color", color.id, false, class:"form-check-input"  %> <label class="form-check-label"><%= color.name %></label></p>
          <% end %>
          </td>
          <td> <%= select_tag 'size', options_from_collection_for_select( Size.all(), 'id', 'name' )  %> </td>

          <td><%= submit_tag 'Filter', class: "btn btn-lg btn-primary" %></td>

      </tr>

  </tbody>
</table>
<% end %>
</div>

<div id="collection-list-id">
    <% if !@products.nil? %>
      <%= render partial: 'collection_list', locals: {all_products: @products}  %>
    <% end %>
</div>

